@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WatchUrl" class="control-label">Enter an URL:</label>
                <input asp-for="WatchUrl" class="form-control" />
                <span asp-validation-for="WatchUrl" class="text-danger"></span>
            </div> <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>
